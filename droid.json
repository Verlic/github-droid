{
  "name": "gitbot",
  "script": "index.js",
  "actions": [
    {
      "function": "assignPr",
      "aliases": ["assign :repo([^\\s]+)#:pr([^\\s]+) to :user([^\\s]+)"],
      "acls": {
        "mention": true
      }
    },
    {
      "function": "merged",
      "aliases": ["merged :repo([^\\s]+) :relative([^\\s]+)"],
      "acls": {
        "explicitMention": true
      },
      "premessage": "_Searching PRs_"
    },
    {
      "function": "help",
      "aliases": ["help"],
      "acls": {
        "mention": true
      }
    }
  ]
}
